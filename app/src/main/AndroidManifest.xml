<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <application
        android:name=".ui.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlucoseFit"
        tools:targetApi="31">
        <activity
            android:name=".ui.content.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GlucoseFit">
        </activity>
        <activity
            android:name=".ui.onboarding.OnBoarding"
            android:exported="false"
            android:theme="@style/Theme.GlucoseFit">
        </activity>
        <activity
            android:name=".ui.RedirectorActivity"
            android:exported="false"
            android:theme="@style/Theme.GlucoseFit"/>
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GlucoseFit.Startup">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".data.messaging.MessagingService"
            android:exported="false"
            android:foregroundServiceType="connectedDevice"/>
    </application>

</manifest>